    <script>
        // Mobile menu toggle
        document.addEventListener('DOMContentLoaded', function() {
            const mobileMenuBtn = document.querySelector('.mobile-menu-btn');
            const navLinks = document.querySelector('.nav-links');
            const languageToggle = document.querySelector('.language-toggle');
            const accessibilityToggle = document.querySelector('.accessibility-toggle');
            
            // Mobile menu toggle
            mobileMenuBtn.addEventListener('click', function() {
                const isExpanded = this.getAttribute('aria-expanded') === 'true';
                this.setAttribute('aria-expanded', !isExpanded);
                navLinks.classList.toggle('show');
                this.innerHTML = navLinks.classList.contains('show') ? 
                    '<i class="fas fa-times"></i>' : '<i class="fas fa-bars"></i>';
            });
            
            // Language toggle simulation
            languageToggle.addEventListener('click', function() {
                const currentLang = this.textContent.includes('EN') ? 'ES' : 'EN';
                this.innerHTML = `<i class="fas fa-language"></i> ${currentLang}`;
                alert(`Language changed to ${currentLang === 'EN' ? 'English' : 'Spanish'}. In a real implementation, this would update the entire site content.`);
            });
            
            // Accessibility toggle simulation
            accessibilityToggle.addEventListener('click', function() {
                alert('Accessibility settings opened. In a real implementation, this would open a panel with options for font size, contrast, screen reader settings, and keyboard navigation assistance.');
            });
            
            // Search functionality simulation
            const searchBtn = document.querySelector('.search-btn');
            const searchInput = document.querySelector('.search-input');
            
            searchBtn.addEventListener('click', function() {
                if (searchInput.value.trim() !== '') {
                    alert(`Searching for: "${searchInput.value}"\n\nIn a real implementation, this would display search results for government services, forms, and information.`);
                } else {
                    alert('Please enter a search term to find government services, forms, or information.');
                }
            });
            
            // Enter key support for search
            searchInput.addEventListener('keypress', function(e) {
                if (e.key === 'Enter' && this.value.trim() !== '') {
                    alert(`Searching for: "${this.value}"\n\nIn a real implementation, this would display search results for government services, forms, and information.`);
                }
            });
            
            // Smooth scrolling for anchor links
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function(e) {
                    if (this.getAttribute('href') !== '#') {
                        e.preventDefault();
                        const targetId = this.getAttribute('href');
                        if (targetId !== '#') {
                            const targetElement = document.querySelector(targetId);
                            if (targetElement) {
                                window.scrollTo({
                                    top: targetElement.offsetTop - 100,
                                    behavior: 'smooth'
                                });
                            }
                        }
                    }
                });
            });
        });
    </script>
